<div class="pager">
    <ul>
        <c:if test="${map.prevPage > 0 }">
            <li><a href="${pageContext.request.contextPath }/board?p=${map.prevPage }&kwd=${map.keyword }">â—€</a></li>
        </c:if>

        <c:forEach begin="${map.beginPage }" end="${map.beginPage + map.listSize - 1 }" var="page">
            <c:choose>
                <c:when test="${map.endPage < page }">
                    <li>${page }</li>
                </c:when>
                <c:when test="${map.currentPage == page }">
                    <li class="selected">${page }</li>
                </c:when>
                <c:otherwise>
                    <li><a href="${pageContext.request.contextPath }/board?p=${page }&kwd=${map.keyword }">${page }</a>
                    </li>
                </c:otherwise>
            </c:choose>
        </c:forEach>
        <c:if test="${map.nextPage > 0 }">
            <li><a href="${pageContext.request.contextPath }/board?p=${map.nextPage }&kwd=${map.keyword }">â–¶</a></li>
        </c:if>
    </ul>
</div>